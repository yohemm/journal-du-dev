<%- include('../partials/header') %> 
      <div id="content">
            <button>Cours/Formation</button>
            <div id="lessons-container">
                  <% 
                  const difficulty = ["debutant", "apprenti", "ammateur", "expert"];
                  lessons.forEach(lesson => {
                        if(lesson){
                        %> 
                  <div class="card-lesson">
                        <div>
                              <h2><%= lesson.title %> </h2>
                              <p class="lesson-desc"><%= lesson.description %> </p>
                              <% if(lesson.formationId ){ %>
      
                                    <p class="cursus"> <a href="/cours/<%= lesson.formationId %>"><%= lesson.formationTitre %>(<%= lesson.order %>/<%= lesson.nbCoursFormation %>)</a></p>
                              <%}%>
                              <p class="level"><%= difficulty[lesson.difficulty-1] %> </p>
                              <p class="time"><%= lesson.time %>min</p>
                              </div>
                  </div>
                  <% };}); %> 
            </div>
            <div id="cursus-container">
                  <% for (const formation of formations) {;%>
                  <a href="/cours/<%= formation.fristCour%>" class="card-cursus">
                        <div>
                              <h2> <%= formation.titre %></h2>
                              <p class="cursus-desc"><%= formation.description%></p>
                              <p class="etapes"><%= formation.nbCours%> Ã©tapes</p>
                              
                              </div>
                  </a>
                  <% } %>
            </div>
      </div>
<%- include('../partials/footer') %>
